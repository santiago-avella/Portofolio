              </svg>
              <h4 id="text_button">Send</h4>
            </button>
          </form>
        </div>
    </div>
    

    <button
      class="fixed bottom-4 leading-0  right-2 inline-block items-center justify-center text-sm font-medium disabled:pointer-events-none disabled:opacity-50 rounded-full w-12 h-12 sm:w-16 sm:h-16 bg-lime-300 focus:bg-white m-0  normal-case"
      type="button"
      id="chat_button"
      aria-haspopup="dialog"
      aria-expanded="false"
      data-state="closed"
    >
    <div class="flex flex-col h-full place-content-center jus">
      <img src="/imgs/bot.png" alt="" class="w-[60%] mx-auto">
      <h4 class="text-[50%] sm:text-[70%] leading-none italic font-josefin font-bold">Ask Me!</h4>
    </div>
   
    </button>
  </div>
</section>

<script>
  const chatbot = document.getElementById('chatbot_block')
  document.querySelector('#chat_button')?.addEventListener('click', () => {
    if (chatbot?.classList.contains('hidden')){
      chatbot.classList.remove('hidden')
    } else{
      chatbot?.classList.add('hidden')
    }
  })
</script>
